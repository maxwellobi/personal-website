  <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>

 <div class="posts">
    <div class="posts-inner">
    
    <%= render @articles %>

    </div>


    <div class="pagination-wrap">
        <%= will_paginate @articles, :page_links => false %>
    </div>

</div>
