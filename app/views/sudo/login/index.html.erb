
<%= form_for @user, :url => sudo_login_path, local: true, :html => { :class => "form-signin" } do |form| %>
    <h1 class="h3 mb-3 font-weight-normal">Maxwell, Sign in</h1>
 
    <%= render 'shared/user_error' %>

    <%= form.email_field :email, :class => "form-control", placeholder: "Email address", required: true, autofocus: true %>
    <%= form.password_field :password, :class => "form-control", placeholder: "Password", required: true %>
    
    <div class="checkbox mb-3">
        <label>
            <input type="checkbox" name="remember" value="remember-me"> Remember me
        </label>
    </div>

    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
    <%= link_to("Create new account", sudo_register_path) %>
    <p class="mt-2 mb-3 text-muted">&copy; <%= "#{Time.new.year} #{@site_name}" %></p>
<% end %>